<p id="notice"><%= notice %></p>

<h1>Mentors</h1>

<table>
  <thead>
    <tr>
      <th>Twitter id str</th>
      <th>Name</th>
      <th>Screen name</th>
      <th>Description</th>
      <th>Url</th>
      <th>Followers count</th>
      <th>Friends count</th>
      <th>Profile background color</th>
      <th>Profile background image url</th>
      <th>Profile banner url</th>
      <th>Profile image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <tr>
        <td><%= mentor.twitter_id_str %></td>
        <td><%= mentor.name %></td>
        <td><%= mentor.screen_name %></td>
        <td><%= mentor.description %></td>
        <td><%= mentor.url %></td>
        <td><%= mentor.followers_count %></td>
        <td><%= mentor.friends_count %></td>
        <td><%= mentor.profile_background_color %></td>
        <td><%= mentor.profile_background_image_url %></td>
        <td><%= mentor.profile_banner_url %></td>
        <td><%= mentor.profile_image_url %></td>
        <td><%= link_to 'Show', mentor %></td>
        <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td>
        <td><%= link_to 'Destroy', mentor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

