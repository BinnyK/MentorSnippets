  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :screen_name %>
    <%= f.text_field :screen_name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>

  <div class="field">
    <%= f.label :followers_count %>
    <%= f.number_field :followers_count %>
  </div>

  <div class="field">
    <%= f.label :friends_count %>
    <%= f.number_field :friends_count %>
  </div>

  <div class="field">
    <%= f.label :profile_background_color %>
    <%= f.text_field :profile_background_color %>
  </div>

  <div class="field">
    <%= f.label :profile_background_image_url %>
    <%= f.text_field :profile_background_image_url %>
  </div>

  <div class="field">
    <%= f.label :profile_banner_url %>
    <%= f.text_field :profile_banner_url %>
  </div>

  <div class="field">
    <%= f.label :profile_image_url %>
    <%= f.text_field :profile_image_url %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
