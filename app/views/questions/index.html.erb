<div class="container-fluid">        
  <!-- Start: Header -->
  <div class="row hero-header questions-list" id="home">
    <div class="container">
      <h1 class="text-center question-header">Questions</h1>
    </div>
    <img src="<%= asset_path "earthdude.png" %>" alt="illustration" class="earthman-small">
    <% if user_signed_in? && (current_user.has_role? :admin) %>
      <%= link_to "Add Question", new_question_path, class: "btn btn-red btn-question" %>
    <% end %>
  </div>
  <!-- End: Header -->
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-4 col-md-offset-4">
      <div class="search">
        <%= search_form_for @q, :html => {class: 'input-group' } do |f| %>
          <%= f.search_field :title_or_hashtag_cont, class: "form-control", placeholder: "Search questions" %>
          <span class="input-group-btn">
            <%= f.submit "Go", class:"btn btn-default" %>
          </span>
        <% end %>
      </div>
    </div>    
  </div>
</div>

<!-- Start: Schedule -->
<div class="container">
  <div class="row me-row schedule" id="schedule">

    <% @questions.each do |question| %>
    <div class="col-md-6 col-md-offset-3">
      <div class="media">
<!--         <div class="media-left">
          <a href="#">
            <img class="media-object" src="http://placehold.it/150x150" alt="...">
          </a>
        </div> -->
        <div class="media-body">
          <h4 class="media-heading"><%= link_to question.title, question %></h4>
          <p>#<%= question.hashtag %></p>

        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
